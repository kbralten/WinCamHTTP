<?xml version="1.0" encoding="UTF-8"?>
<Wix xmlns="http://wixtoolset.org/schemas/v4/wxs"
     xmlns:WixUI="http://wixtoolset.org/schemas/v4/wixui">
  <!-- Fragment containing the StartupDlg definition wrapped in a UI element
       so the Dialog is a valid child in the WiX v4 schema. -->
  <Fragment>
    <UI>
      <Dialog Id="StartupDlg" Width="370" Height="270" Title="[ProductName] Setup">
        <Control Id="Description" Type="Text" X="15" Y="15" Width="340" Height="60" Text="This installer will install WinCamHTTP.\nSelect options below and click Next to continue." />

        <!-- Checkbox: checked by default because STARTUP property is 1 -->
        <Control Id="StartupCheckbox" Type="CheckBox" X="15" Y="90" Width="340" Height="20" Text="Start WinCamHTTP when the system starts (recommended)"
                 Property="STARTUP" CheckBoxValue="1" />

        <!-- Next/Cancel buttons -->
        <Control Id="Next" Type="PushButton" X="215" Y="235" Width="56" Height="17" Text="Install">
          <Publish Event="EndDialog" Value="Return" />
        </Control>
        <Control Id="Cancel" Type="PushButton" X="275" Y="235" Width="56" Height="17" Text="Cancel">
          <Publish Event="EndDialog" Value="Exit" />
        </Control>
      </Dialog>
    </UI>
  </Fragment>
</Wix>